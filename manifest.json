{
    "manifest_version": 3,
    "name": "IceCreame",
    "version": "1.0",
    "description": "IceCreame Screenshot",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}